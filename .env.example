# Environment Variables for Database Script Watcher
# Copy this file to .env and update the values for your environment

# Application Configuration
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080
CONTEXT_PATH=/

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/filewatcher
DATABASE_USERNAME=filewatcher
DATABASE_PASSWORD=changeme
DATABASE_DRIVER=org.postgresql.Driver
DATABASE_MAX_POOL_SIZE=20
DATABASE_MIN_IDLE=5
DATABASE_CONNECTION_TIMEOUT=30000
DATABASE_IDLE_TIMEOUT=600000
DATABASE_MAX_LIFETIME=1800000
DATABASE_LEAK_DETECTION=60000
DATABASE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# File Watcher Configuration
SQL_WATCH_FOLDER=/opt/filewatcher/sql-scripts
SQL_COMPLETED_FOLDER=/opt/filewatcher/sql-scripts/completed
SQL_ERROR_FOLDER=/opt/filewatcher/sql-scripts/error
SQL_POLLING_INTERVAL=10000
SQL_PROCESSOR_ENABLED=true

SQLLOADER_LOG_FOLDER=/opt/filewatcher/sqlloader-logs
SQLLOADER_COMPLETED_FOLDER=/opt/filewatcher/sqlloader-logs/completed
SQLLOADER_ERROR_FOLDER=/opt/filewatcher/sqlloader-logs/error
SQLLOADER_POLLING_INTERVAL=15000
SQLLOADER_PROCESSOR_ENABLED=false

FILE_WATCHER_MAX_RETRIES=5
FILE_WATCHER_RETRY_DELAY=2000

# Logging Configuration
LOG_LEVEL_APP=INFO
LOG_LEVEL_SPRING=WARN
LOG_FILE_PATH=/var/log/file-watcher/file-watcher.log
LOG_MAX_SIZE=100MB
LOG_MAX_HISTORY=30

# Tomcat Configuration
TOMCAT_MAX_THREADS=200
TOMCAT_MIN_THREADS=10
TOMCAT_MAX_CONNECTIONS=8192
TOMCAT_ACCEPT_COUNT=100

# JVM Configuration
JAVA_OPTS=-Xms512m -Xmx2g -XX:+UseG1GC -XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0

# Docker Configuration
DOCKER_REGISTRY=
APP_VERSION=latest

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin123

# Security Configuration (if implementing authentication)
# JWT_SECRET=your-secret-key
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=admin123