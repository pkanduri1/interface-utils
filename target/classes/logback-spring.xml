<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level [%X{correlationId:-}] [%X{fileName:-}] [%X{processorType:-}] [%X{eventType:-}] [%X{sessionId:-}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Main application log file -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/file-watcher.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/file-watcher.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level [%X{correlationId:-}] [%X{fileName:-}] [%X{processorType:-}] [%X{eventType:-}] [%X{sessionId:-}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Archive Search Audit Log -->
    <appender name="ARCHIVE_AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/archive-search-audit.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/archive-search-audit.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <loggerName/>
                <mdc/>
                <message/>
                <stackTrace/>
            </providers>
        </encoder>
    </appender>
    
    <!-- Archive Search Security Log -->
    <appender name="ARCHIVE_SECURITY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/archive-search-security.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/archive-search-security.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>365</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <loggerName/>
                <mdc/>
                <message/>
                <stackTrace/>
            </providers>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>
    
    <!-- Archive Search Audit Logger -->
    <logger name="ARCHIVE_SEARCH_AUDIT" level="INFO" additivity="false">
        <appender-ref ref="ARCHIVE_AUDIT_FILE"/>
    </logger>
    
    <!-- Archive Search Service Logger (for security events) -->
    <logger name="com.fabric.watcher.archive" level="DEBUG" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="ARCHIVE_SECURITY_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
    
    <!-- Profile-specific configurations -->
    <springProfile name="dev,test">
        <logger name="com.fabric.watcher" level="DEBUG"/>
        <logger name="ARCHIVE_SEARCH_AUDIT" level="DEBUG"/>
    </springProfile>
    
    <springProfile name="prod">
        <logger name="com.fabric.watcher" level="INFO"/>
        <logger name="ARCHIVE_SEARCH_AUDIT" level="INFO"/>
        <logger name="org.springframework" level="WARN"/>
    </springProfile>
</configuration>